{
	"tasks": {
		"test": "deno test --allow-read **/*.test.ts",
		"test:watch": "deno test --allow-read --watch ./",
		"test:verbose": "deno test --allow-read --trace-leaks ./"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@^0.224.0",
		"npm:@kreuzberg/wasm@^4.0.0": "../../crates/kreuzberg-wasm/dist/index.mjs"
	},
	"compilerOptions": {
		"lib": ["deno.window", "deno.unstable"],
		"strict": true
	},
	"lint": {
		"rules": {
			"tags": ["recommended"]
		}
	},
	"fmt": {
		"useTabs": false,
		"lineWidth": 100,
		"indentWidth": 2,
		"semiColons": true,
		"singleQuote": false
	}
}
