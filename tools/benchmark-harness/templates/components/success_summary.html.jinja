<div class="success-summary">
    <div class="summary-card">
        <h3>Total Files</h3>
        <p class="metric">
            {%- set max_count = 0 -%}
            {%- for fw in data.frameworks -%}
                {%- if data.framework_metrics[fw] -%}
                    {%- set max_count = [max_count, data.framework_metrics[fw].count]|max -%}
                {%- endif -%}
            {%- endfor -%}
            {{ max_count }}
        </p>
    </div>
    <div class="summary-card">
        <h3>Overall Success Rate</h3>
        <p class="metric">
            {%- set total_count = 0 -%}
            {%- set total_successful = 0 -%}
            {%- for fw in data.frameworks -%}
                {%- if data.framework_metrics[fw] -%}
                    {%- set total_count = total_count + data.framework_metrics[fw].count -%}
                    {%- set total_successful = total_successful + data.framework_metrics[fw].successful -%}
                {%- endif -%}
            {%- endfor -%}
            {%- if total_count > 0 -%}
                {{ ((total_successful / total_count) * 100)|round(1) }}%
            {%- else -%}
                0%
            {%- endif -%}
        </p>
    </div>
</div>
